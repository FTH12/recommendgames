/* pages/gamelibrary/gamelibrary.wxss */
.flex-wrp {
    display: flex;
    background-color: ghostwhite
}
.flex-item {
    width: 100%;
}
.game-block {
    display: flex;
    flex-direction: row;
    background: white;
    width: 100%;
    height: 100px;
    margin-top: 10px;
}

.game-image {
    height: 170rpx;
    width: 190rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}
.game-text-title {
    float: right;
    font-size: 30rpx;
    font-weight: bold;
    /* margin-left: 30rpx; */
    width: 400rpx;
    margin-top: 20rpx;
    margin-left: 15rpx;
}
.game-text-content {
    font-size: 25rpx;
    /* word-wrap:break-word; */
    word-break: normal;
    margin-left: 15rpx;
}
.game-text-rate {
    width: 30%;
}
.game-text-score {
    font-size: 30rpx;
    font-weight: bold;
    text-align: right;
    float: right;
    margin-top: 20rpx;
}