page {
    width: 100%;
    height: 100%;
  }
.main{
    flex: 1;
    position: relative;
    height: 100%;
}
.main-scroll{
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}
.container{
    width: 100%;
    height: auto;
    min-height: 100%;
    background-color: #fff;
    position: relative;
    display: flex;
    flex-direction: column;
}
.navbar{
  flex: 0 0 80rpx;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: rgb(255, 0, 0);
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: rgb(255, 0, 0);

}


.page{
    width: 750rpx;
    height: 108rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.page view{
    height: 108rpx;
    width: 50%;
    float: left;
    /* font-size: 29rpx; */
    color: #333;
    text-align: center;
    line-height: 108rpx;
}

.page .prev{
    border-right: 1px solid #D9D9D9;
}

.page .disabled{
    color: #ccc;
}

/* 分隔线--底部 */
.line{
    width: 90%;    /* 分隔线的长度 */
    margin: auto;
    height: 1px;    /* 分隔线粗细 */
    text-align: center;
    font-size: 24rpx;
    color: #aaa;
    background: #ccc;
    margin-top: 5px;
    margin-bottom: 10px;
}
.line-small{
    width: 100%;    /* 分隔线的长度 */
    margin: auto;
    height: 1px;    /* 分隔线粗细 */
    text-align: center;
    font-size: 24rpx;
    color:  #fff;
    background: rgb(233, 233, 233);
    margin-top: 5px;
    margin-bottom: 10px;
}
.line span{
    position: relative;
    top: -8px;
    /* background: #fff; */
    padding: 0px 10px;
}


